<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ingsw.bullet.client.logic.controllerFXML.DettagliPromemoria">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dettagli Promemoria" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <FlowPane prefHeight="72.0" prefWidth="600.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nome: ">
                           <FlowPane.margin>
                              <Insets left="80.0" top="20.0" />
                           </FlowPane.margin>
                        </Text>
                        <TextField>
                           <FlowPane.margin>
                              <Insets top="20.0" />
                           </FlowPane.margin>
                        </TextField>
                     </children>
                  </FlowPane>
                  <FlowPane prefHeight="131.0" prefWidth="600.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Descrizione: ">
                           <FlowPane.margin>
                              <Insets left="80.0" />
                           </FlowPane.margin>
                        </Text>
                        <TextArea prefHeight="112.0" prefWidth="200.0">
                           <FlowPane.margin>
                              <Insets />
                           </FlowPane.margin>
                        </TextArea>
                     </children>
                  </FlowPane>
                  <FlowPane prefHeight="9.0" prefWidth="600.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Data di scadenza: ">
                           <FlowPane.margin>
                              <Insets left="80.0" />
                           </FlowPane.margin>
                        </Text>
                        <TextField>
                           <FlowPane.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </FlowPane.margin>
                        </TextField>
                     </children>
                  </FlowPane>
                  <MenuButton fx:id="contrassegnazione" mnemonicParsing="false" onAction="#contrassegnaPromemoria" text="Contrassegna">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Completato" />
                      <MenuItem mnemonicParsing="false" text="Non Completato" />
                    </items>
                     <VBox.margin>
                        <Insets left="80.0" />
                     </VBox.margin>
                  </MenuButton>
               </children>
            </VBox>
         </center>
         <bottom>
            <Button fx:id="indietro" mnemonicParsing="false" onAction="#tornaIndietro" text="Indietro" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
